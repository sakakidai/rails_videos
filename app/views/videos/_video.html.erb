<div id="<%= dom_id video %>">
  <p>
    <strong>Title:</strong>
    <%= video.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= video.content %>
  </p>

  <p>
    <strong>Thumbnail:</strong>
    <br>
    <% if video.thumbnail? %>
      <%= image_tag video.thumbnail.medium.url %>
    <% end %>
  </p>

  <p>
    <strong>Video</strong>
    <br>
    <% if video.video? %>
      <%= video_tag(video.video.url, controls: true)  %>
    <% end %>
  </p>

</div>
